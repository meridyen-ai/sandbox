# =============================================================================
# Meridyen Sandbox - Environment Configuration
# =============================================================================

# Authentication provider: static, remote, noop
SANDBOX_AUTHENTICATION__PROVIDER=static

# Remote auth provider URL (for validating API keys via external service)
# SANDBOX_AUTHENTICATION__REMOTE_URL=https://your-auth-api.com/api/v1/validate-key
# SANDBOX_AUTHENTICATION__REMOTE_TIMEOUT=5.0

# Database network (Docker)
DATABASE_NETWORK=client-databases
DATABASE_NETWORK_EXTERNAL=false

# Port mappings
SANDBOX_REST_PORT=8080
SANDBOX_GRPC_PORT=50051
SANDBOX_METRICS_PORT=9090
